<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_type_view_form" model="ir.ui.view">
            <field name="name">Sale Order Type Policy Form</field>
            <field name="model">sale.order.type</field>
            <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group[last()]" position="after">
                    <group name="grp_policy_sale_order" string="Sale Order Workflow Button Policy" colspan="4" col="2" groups="base.group_system">
                        <field name="invoice_recreate_group_ids" widget="many2many_tags"/>
                        <field name="invoice_corrected_group_ids" widget="many2many_tags"/>
                        <field name="quotation_send_group_ids" widget="many2many_tags"/>
                        <field name="confirm_order_group_ids" widget="many2many_tags"/>
                        <field name="view_invoice_group_ids" widget="many2many_tags"/>
                        <field name="create_invoice_group_ids" widget="many2many_tags"/>
                        <field name="copy_quotation_group_ids" widget="many2many_tags"/>
                        <field name="cancel_quot_group_ids" widget="many2many_tags"/>
                        <field name="cancel_order_group_ids" widget="many2many_tags"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
