<openerp>
<data>

<record id="sale_order_view_form" model="ir.ui.view">
    <field name="name">Sale Order</field>
    <field name="model">sale.order</field>
    <field name="priority" eval="20"/>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='project_id']" position="after">
            <field name="allowed_product_categ_ids" widget="many2many_tags" invisible="1"/>
            <field name="allowed_product_ids" widget="many2many_tags" invisible="1"/>
        </xpath>

        <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="attributes">
            <attribute name="domain">['|',('id','in',parent.allowed_product_ids[0][2]),('categ_id','in',parent.allowed_product_categ_ids[0][2])]</attribute>
        </xpath>
        <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
            <attribute name="domain">['|',('id','in',parent.allowed_product_ids[0][2]),('categ_id','in',parent.allowed_product_categ_ids[0][2])]</attribute>
        </xpath>
    </field>
</record>

</data>
</openerp>
