<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_type_view_form" model="ir.ui.view">
            <field name="name">Sale Order Type Policy Form</field>
            <field name="model">sale.order.type</field>
            <field name="inherit_id" ref="sale_order_policy.sale_order_type_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='grp_policy_sale_order']" position="after">
                        <group name="grp_price_change_policy" string="Price Change Policy" colspan="4" col="2" groups="base.group_system">
                            <field name="limit_price_change"/>
                            <field name="price_change_group_ids" widget="many2many_tags"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
